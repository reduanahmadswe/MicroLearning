{
  "name": "microlearning-backend",
  "version": "1.0.0",
  "description": "AI-Powered Micro-Learning Platform Backend",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed:admin": "ts-node src/scripts/seedAdmin.ts",
    "seed:instructor": "ts-node src/scripts/seedInstructor.ts",
    "seed:demo": "ts-node src/scripts/seedDemoData.ts",
    "seed:users": "ts-node src/scripts/seedDemoUsers.ts",
    "seed:all": "ts-node src/scripts/seedComprehensiveData.ts",
    "publish:lessons": "ts-node src/scripts/publishAllLessons.ts",
    "remove:badge": "ts-node src/scripts/removeBadgeFromUser.ts"
  },
  "keywords": [
    "microlearning",
    "ai",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-label": "^2.1.8",
    "@types/bull": "^3.15.9",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "class-variance-authority": "^0.7.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.5",
    "html2canvas": "^1.4.1",
    "http-status": "^2.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sslcommerz-lts": "^1.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
